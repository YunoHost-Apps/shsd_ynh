{
    "name": "Self-Hosting Security Dashboard",
    "id": "shsd",
    "packaging_format": 1,
    "description": {
        "en": "SHSD monitors usage of mail accounts to detect accounts compromission",
        "fr": "SHSD surveille les connections mails d'un serveur YunoHost et détécte les commptes compromis."
    },
    "version": "1.0",
    "url": "https://github.com/dynamid/shsd_ynh",
    "license": "free",
    "maintainer": {
        "name": "François Lesueur",
        "email": "francois.lesueur@insa-lyon.fr",
        "url": "http://perso.citi-lab.fr/flesueur/"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "dovecot"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for ynhexample",
                    "fr": "Choisissez un nom de domaine pour ynhexample"
                },
                "example": "shsd.packaging"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for SHSD",
                    "fr": "Choisissez un chemin pour SHSD"
                },
                "example": "/shsd",
                "default": "/shsd"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "language",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["fr", "en"],
                "default": "fr"
            }
        ]
    }
}
